<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragmentui.CustomerVerify">


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.036">

            <TextView
                    android:text="Customer Verification"

                    android:padding="2dp"
                    android:layout_width="320dp"
                    android:layout_height="33dp"
                    android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.17" android:textSize="18sp" android:textStyle="bold"
                    android:layout_weight="1"/>
            <TextView
                    android:text="Please provide your phone number below to verify your payment"
                    android:padding="5dp"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.17"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
                    app:layout_constraintVertical_bias="0.0" android:layout_weight="1"/>

            <RelativeLayout


                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="53dp"
                    android:padding="5dp"
                    android:id="@+id/relativeLayout"
                    android:layout_marginLeft="40dp" android:layout_marginStart="49dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="28dp"
                    app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_weight="1">
                <EditText
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        tools:layout_editor_absoluteY="281dp"
                        tools:layout_editor_absoluteX="98dp"
                        android:id="@+id/phonenumber"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                />
                <ImageView
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        tools:layout_editor_absoluteY="5dp"
                        tools:layout_editor_absoluteX="41dp"
                        android:id="@+id/countryCode"
                        android:layout_toStartOf="@+id/phonenumber"
                        android:layout_marginRight="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_toLeftOf="@+id/phonenumber"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp" android:scaleType="centerInside"/>

            </RelativeLayout>
            <Button
                    android:text="Verify"
                    android:minWidth="50dp"
                    android:textAllCaps="false"
                    android:textColorHighlight="@color/white"
                    android:layout_width="328dp"
                    android:layout_height="53dp"
                    android:id="@+id/button2"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintHorizontal_bias="0.519" android:layout_weight="1"
            />


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</layout>
